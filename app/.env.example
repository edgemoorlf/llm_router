# API instances configuration
# Comma-separated list of API instance names
API_INSTANCES=azure1,azure2,generic1

# Global rate limiting
RATE_LIMIT_TPM=30000
RATE_LIMIT_ENABLED=true

# Routing strategy (priority, round_robin, weighted, least_loaded, failover, model_specific)
API_ROUTING_STRATEGY=failover

# API Instance: azure1 (Azure OpenAI)
API_INSTANCE_AZURE1_PROVIDER_TYPE=azure
API_INSTANCE_AZURE1_API_KEY=your-azure-api-key-1
API_INSTANCE_AZURE1_API_BASE=https://your-resource-name-1.openai.azure.com
API_INSTANCE_AZURE1_API_VERSION=2023-07-01-preview
API_INSTANCE_AZURE1_PRIORITY=1
API_INSTANCE_AZURE1_WEIGHT=100
API_INSTANCE_AZURE1_MAX_TPM=30000
API_INSTANCE_AZURE1_SUPPORTED_MODELS=gpt-4o,gpt-3.5-turbo
API_INSTANCE_AZURE1_MODEL_MAP_GPT4O=gpt-4o
API_INSTANCE_AZURE1_MODEL_MAP_GPT35TURBO=gpt-35-turbo
API_INSTANCE_AZURE1_MAX_INPUT_TOKENS=0

# API Instance: azure2 (Azure OpenAI)
API_INSTANCE_AZURE2_PROVIDER_TYPE=azure
API_INSTANCE_AZURE2_API_KEY=your-azure-api-key-2
API_INSTANCE_AZURE2_API_BASE=https://your-resource-name-2.openai.azure.com
API_INSTANCE_AZURE2_API_VERSION=2023-07-01-preview
API_INSTANCE_AZURE2_PRIORITY=2
API_INSTANCE_AZURE2_WEIGHT=100
API_INSTANCE_AZURE2_MAX_TPM=30000
API_INSTANCE_AZURE2_SUPPORTED_MODELS=gpt-4o,gpt-3.5-turbo
API_INSTANCE_AZURE2_MODEL_MAP_GPT4O=gpt-4o
API_INSTANCE_AZURE2_MODEL_MAP_GPT35TURBO=gpt-35-turbo
API_INSTANCE_AZURE2_MAX_INPUT_TOKENS=0

# API Instance: generic1 (Generic OpenAI API)
API_INSTANCE_GENERIC1_PROVIDER_TYPE=generic
API_INSTANCE_GENERIC1_API_KEY=your-openai-api-key
API_INSTANCE_GENERIC1_API_BASE=https://api.openai.com
API_INSTANCE_GENERIC1_API_VERSION=v1
API_INSTANCE_GENERIC1_PRIORITY=10
API_INSTANCE_GENERIC1_WEIGHT=50
API_INSTANCE_GENERIC1_MAX_TPM=30000
API_INSTANCE_GENERIC1_SUPPORTED_MODELS=claude-3-opus,claude-3-sonnet,claude-3-haiku
API_INSTANCE_GENERIC1_MAX_INPUT_TOKENS=0

# Legacy single-instance configuration (used only if API_INSTANCES is empty)
API_KEY=your-fallback-api-key
API_BASE=https://your-fallback-resource.openai.azure.com
API_VERSION=2023-07-01-preview
API_PROVIDER_TYPE=azure

# Model mappings (global, used if instance doesn't have a specific mapping)
MODEL_MAP_GPT4O=gpt-4o
MODEL_MAP_GPT35TURBO=gpt-35-turbo
